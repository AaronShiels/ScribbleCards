{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "npm: install",
			"type": "npm",
			"script": "install",
			"problemMatcher": ["$tsc"]
		},
		{
			"label": "npm: client: build: debug",
			"type": "npm",
			"script": "client: build: debug",
			"problemMatcher": ["$tsc"]
		},
		{
			"label": "npm: client: build: release",
			"type": "npm",
			"script": "client: build: release",
			"problemMatcher": ["$tsc"]
		},
		{
			"label": "npm: server: build: debug",
			"type": "npm",
			"script": "server: build: debug",
			"problemMatcher": []
		},
		{
			"label": "npm: server: build: release",
			"type": "npm",
			"script": "server: build: release",
			"problemMatcher": []
		},
		{
			"label": "docker: build",
			"type": "shell",
			"command": "docker",
			"args": ["build", "--tag", "scribble-cards:latest", "."],
			"problemMatcher": []
		},
		{
			"label": "docker: tag",
			"type": "shell",
			"command": "docker",
			"args": ["tag", "scribble-cards:latest", "aaronshiels/scribble-cards:${input:version}"],
			"problemMatcher": []
		},
		{
			"label": "docker: push",
			"type": "shell",
			"command": "docker",
			"args": ["push", "aaronshiels/scribble-cards:${input:version}"],
			"problemMatcher": []
		},
		{
			"label": "docker: compose: debug",
			"type": "shell",
			"command": "docker",
			"args": ["compose", "--file", "docker-compose.debug.yml", "up"],
			"problemMatcher": []
		},
		{
			"label": "terraform: init",
			"type": "shell",
			"command": "terraform",
			"args": ["init"],
			"problemMatcher": []
		},
		{
			"label": "terraform: apply",
			"type": "shell",
			"command": "terraform",
			"args": ["apply"],
			"problemMatcher": []
		}
	],
	"inputs": [
		{
			"id": "version",
			"description": "Version of the application",
			"type": "promptString"
		}
	]
}
